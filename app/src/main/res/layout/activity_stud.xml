    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cva.attendance.Stud">

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
