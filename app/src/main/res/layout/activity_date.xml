<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cva.attendance.Date">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <DatePicker
            android:id="@+id/dpick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:headerBackground="@color/black"
            android:headerDayOfMonthTextAppearance="@android:color/background_light"
            android:headerYearTextAppearance="@android:color/background_light"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnnxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT" />
    </LinearLayout>
</RelativeLayout>
